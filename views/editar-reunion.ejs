<main class="contenedor contenedor-formularios">
    <h1><%- nombrePagina %></h1>
    <form class="default-form" method="POST">
        <legend>Sobre la Reunion</legend>
        <div class="campo">
            <label>Grupo</label>
            <select name="grupoId">
                <option value="" disabled selected>-- Selecciona Grupo --</option>
                <% if(grupos.length > 0 ) { %>
                    <% grupos.forEach(grupo => { %>
                        <option <%= (reunion.grupoId === grupo.id ) ? 'selected' : '' %> value="<%= grupo.id %>"><%= grupo.nombre%></option>
                    <% }) %>
                <% } %>
            </select>
        </div>
        <div class="campo">
            <label>Titulo</label>
            <input  maxlength="23"  placeholder="Titulo" type="text" name="titulo" value="<%= reunion.titulo %>">
        </div>
        <div class="campo">
            <label>Invitado</label>
            <input  maxlength="23" placeholder="Invitado" type="text" name="invitado" value="<%= reunion.invitado %>">
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Fecha</label>
                <% var today = new Date();
                var dd = today.getDate();
                var mm = today.getMonth()+1; //January is 0!
                var yyyy = today.getFullYear();
                 if(dd<10){
                        dd='0'+dd
                    } 
                    if(mm<10){
                        mm='0'+mm
                    } 
                
                today = yyyy+'-'+mm+'-'+dd;
                %>
                <input min="<%= today %>" type="date" name="fecha" value="<%=reunion.fecha%>">
            </div>
            <div class="campo">
                <label>Hora</label>
                <input placeholder="Hora" type="time" name="hora" value="<%= reunion.hora %>">
            </div>
        </div>
        <div class="campo">
            <label>Cupo</label>
            <input max="100" placeholder="Cupo" type="number" min="1" name="cupo" value="<%= reunion.cupo %>">
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input class="hola" placeholder="descripcion" type="hidden" id="x" name="descripcion" value="<%= reunion.descripcion %>">
                <trix-editor  input="x"></trix-editor>
            </div>
        </div>

    <form class="default-form" action="/nueva-reunion" method="POST">
        <legend>Sobre la reunion</legend>
        <div class="campo">
            <label>Grupo</label>
            <select name="grupoId">
                    <option value="selected disabled">-- Selecciona Grupo --</option>
                    <% if(grupos.length > 0){ %>
                        <%grupos.forEach(grupo =>{%>
                            <option value="<%= grupo.id%>"><%= grupo.nombre%></option>
                       <%})%>
                    <%}%>   
            </select>
        </div>
        <div class="campo">
            <label>Titulo</label>
            <input  maxlength="23"  type="text" name="titulo" placeholder="Titulo Reunion">
        </div>
        <div class="campo">
            <label>Invitado</label>
            <input  maxlength="23" type="text" name="invitado" placeholder="Nombre Invitado">
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Fecha</label>
                <% var today = new Date();
                var dd = today.getDate();
                var mm = today.getMonth()+1; //January is 0!
                var yyyy = today.getFullYear();
                 if(dd<10){
                        dd='0'+dd
                    } 
                    if(mm<10){
                        mm='0'+mm
                    } 
                
                today = yyyy+'-'+mm+'-'+dd;
                %>
                <input type="date" name="fecha" min="<%= today %>">
            </div>
            <div class="campo">
                <label>Hora</label>
                <input type="time" name="hora" placeholder="Hora Reunion">
            </div>
        </div>
        <div class="campo">
            <label>Cupo</label>
            <input max="100" type="number" min="1" name="cupo" placeholder="Cupo Reunion (si aplica)">
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
 
